<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Upload</title>
</head>

<body>
    <!--  Formulario para cargar productos  -->
    <h2>Cargar Productos</h2>
    <form action="/api/products" method="POST" id="form">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="description">Descripción:</label>
        <input type="text" id="description" name="description" required><br><br>

        <label for="code">Código:</label>
        <input type="text" id="code" name="code" required><br><br>

        <label for="price">Precio:</label>
        <input type="text" id="price" name="price" required><br><br>

        <label for="status">Activo:</label>
        <input type="radio" id="status" name="status" required><br><br>

        <label for="stock">Stock:</label>
        <input type="text" id="stock" name="stock" required><br><br>

        <label for="category">Categoría:</label>
        <select id="category" name="category">
            <option value="vinos">Vinos</option>
            <option value="destilados">Destilados</option>
            <option value="cervezas">Cervezas</option>
        </select><br><br>
        {{!-- <input type="text" id="category" name="category" required><br><br> --}}
        <div>
            <button type="submit" id="btn-add">Cargar producto</button>
        </div>
    </form>

    <!--  Listado de los productos en tiempo real -->
    <h2>Productos Cargados</h2>
    <ul id="realtimeProductList">
        {{#each products}}
        <li>{{id}} - {{title}} - {{price}} - {{description}}</li>
        <div>
            <button onclick="deleteProduct('{{_id}}')" data-product-id="{{_id}}">Eliminar</button>
        </div>
        {{/each}}
    </ul>


    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>
</body>

</html>